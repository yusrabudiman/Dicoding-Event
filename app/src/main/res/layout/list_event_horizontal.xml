<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="16dp"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/imageEvent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="@string/image_up_coming_event" />

        <ProgressBar
            android:id="@+id/progressBarImageLoading"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
        android:visibility="visible" />

        <TextView
            android:id="@+id/titleEvent"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageEvent"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/up_coming_event"
            android:ellipsize="end"
            android:maxLines="3"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextSizeCheck"
            tools:text="Sun Event Title Long Example" />

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>